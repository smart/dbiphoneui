<div id="new_request" >
  <input type="hidden" name="_method" value="post" />
  <input type="hidden" name="_callback" value="?" />
  <input type="hidden" name="fan_request[show_id]" value="1"/>
  <div class="toolbar">
    <a class="back">Back</a>
    <h1>New Request</h1>
  </div>
  <form action="http://adiserver.sympact.local:8000/fan_requests?format=json&callback=?" method="post" accept-charset="utf-8">
      <ul class="rounded">
        <li>
          <select name="fan_request[song_id]">
            <option value="">Select a Song</option>
            <option value="111">Reactor</option>
          </select>
        </li>
        <li><input name="fan_request[requested_by]" value="" type="text" placeholder="Your Name"></li>
      </ul>
      <h2>Add a note to the request</h2>
      <ul class="rounded">
        <li><textarea name="fan_request[notes]" placeholder="Add a Note to the band"></textarea></li>
      </ul>
      <a class="whiteButton songrequest">Submit</a>
      <a class="grayButton goback">Cancel</a>
  </form>
</form>